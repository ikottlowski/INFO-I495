<?xml version="1.0" encoding="utf-8"?>
<!--  Tyler Leeth for A290 Android Final Project: Note taking app  -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.indiana.mynotetwo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="edu.indiana.mynotetwo.Notebooks"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.indiana.mynotetwo.Notes"
            android:label="@string/title_activity_notes" >
        </activity>
        <activity
            android:name="edu.indiana.mynotetwo.CreateNewNote"
            android:label="@string/title_activity_create_new_note" >
        </activity>
        <activity
            android:name="edu.indiana.mynotetwo.ShowNote"
            android:label="@string/title_activity_show_note" >
        </activity>
    </application>

</manifest>
