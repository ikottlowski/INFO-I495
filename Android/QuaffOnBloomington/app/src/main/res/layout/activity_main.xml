<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quaffon.team9.quaffonbloomington.SignUpActivity"
    android:background="@color/main_back_gound_green"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="121dp"
                android:background="@drawable/quaff_on_logo"
                android:id="@+id/quaff_on_image"
                android:contentDescription="@string/logodescription"
                android:layout_marginBottom="20dp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/sign_in_table">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/main_menu"
                        android:id="@+id/sign_up_title"
                        android:layout_column="1"
                        android:gravity="bottom"
                        android:layout_gravity="left|bottom"
                        android:layout_marginBottom="12dp"
                        android:textColor="#ffffffff"
                        android:background="#ff000000"
                        android:paddingLeft="10dp" />
                </FrameLayout>

            </TableLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
