<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quaffon.team9.quaffonbloomington.SignUpActivity"
    android:background="@color/main_back_gound_green"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="121dp"
                android:background="@drawable/quaff_on_logo"
                android:id="@+id/quaff_on_image"
                android:contentDescription="@string/logodescription"
                android:layout_marginBottom="20dp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/sign_in_table">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/sign_up"
                        android:id="@+id/sign_up_title"
                        android:layout_column="1"
                        android:gravity="bottom"
                        android:layout_gravity="left|bottom"
                        android:layout_marginBottom="12dp"
                        android:textColor="#000000" />
                </FrameLayout>

            </TableLayout>
        </TableRow>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/first_name_sign_up"
            android:ems="10"
            android:id="@+id/firstName"
            android:textColor="#000000"
            android:selectAllOnFocus="true"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/last_name_sign_up"
            android:ems="10"
            android:id="@+id/lastName"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:selectAllOnFocus="true"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailedit_sign_up"
            android:text="@string/email_login"
            android:textAlignment="center"
            android:textColor="#000000"
            android:selectAllOnFocus="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/password_login"
            android:id="@+id/password_header_sign_up"
            android:textColor="#000000"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_sign_up"
            android:text="@string/password_confirm_sign_up"
            android:selectAllOnFocus="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/password_confirm_sign_up"
            android:id="@+id/password_confirm_header_sign_up"
            android:singleLine="false"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_confirm"
            android:text="@string/password_confirm_sign_up"
            android:selectAllOnFocus="true"
            android:gravity="center" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/go_to_app"
                android:onClick="skipToApp"
                android:id="@+id/goToApp"
                android:layout_marginBottom="10dp"
                android:textColor="#FF000000"
                android:layout_gravity="left|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/sign_up"
                android:onClick="goToSignUp"
                android:id="@+id/sign_up_button"
                android:layout_marginBottom="10dp"
                android:textColor="#FF000000"
                android:layout_gravity="right|bottom" />
        </FrameLayout>
    </TableLayout>


</LinearLayout>
