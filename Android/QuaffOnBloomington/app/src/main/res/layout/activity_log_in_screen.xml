<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_back_gound_green"
    tools:context=".LoadingScreen"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="center"
    android:baselineAligned="false"
    android:showDividers="beginning"
    android:transitionGroup="false">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:rowCount="2"
        android:columnCount="1"
        android:id="@+id/login_grid"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_row="1"
            android:id="@+id/login_area">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="170dp"
                android:background="@drawable/quaff_on_logo"
                android:id="@+id/quaff_on_image"
                android:contentDescription="@string/logodescription"
                android:layout_gravity="center"
                android:layout_weight="0.17"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailedit_login"
                android:layout_gravity="center_horizontal"
                android:text="@string/email_login"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_login"
                android:layout_gravity="center_horizontal"
                android:text="@string/password_login"
                android:gravity="center"/>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:id="@+id/skiplogin">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="61dp"
            android:columnCount="3"
            android:rowCount="2"
            android:id="@+id/skiplogin_grid">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/go_to_app"
                android:onClick="skipToApp"
                android:id="@+id/goToApp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/sign_up"
                android:onClick="goToSignUp"
                android:id="@+id/signUp"
                android:layout_column="2"
                android:padding="5dp" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>
